#!/data/data/com.termux/files/usr/bin/bash
# --- run16.sh: Arranca UltraPro16 con nodemon + localtunnel ---

# Ir al directorio del proyecto
cd ~/miapp

# Detener cualquier instancia previa de Node
pkill node || true

echo "🔥 Iniciando UltraPro16 (nodemon index.js)..."

# Arrancar servidor con nodemon en background
nodemon index.js &

# Esperar unos segundos para que nodemon inicialice
sleep 2

echo "🌐 Lanzando localtunnel para puerto ${PORT:-3000} (ctrl+c para detener la sesión)"
lt --port ${PORT:-3000}

chmod +x run16.sh
